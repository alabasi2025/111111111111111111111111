# ==============================================================================
# متغيرات البيئة الأساسية (Core Environment Variables)
# ==============================================================================

# بيئة التشغيل: 'development', 'staging', 'production'
NODE_ENV=development

# منفذ تشغيل التطبيق (مثال: 3000 للواجهة الأمامية، 5000 للواجهة الخلفية)
PORT=5000

# مفتاح سري لتشفير الجلسات والرموز (يجب أن يكون طويلاً ومعقداً)
APP_SECRET=your_very_long_and_complex_secret_key_here

# ==============================================================================
# إعدادات قاعدة البيانات (PostgreSQL Only)
# ==============================================================================

# اسم المستخدم لقاعدة البيانات
DB_USER=postgres

# كلمة المرور لقاعدة البيانات
DB_PASSWORD=your_db_password

# اسم قاعدة البيانات
DB_NAME=unified_monorepo_db

# مضيف قاعدة البيانات (عادةً localhost في التطوير)
DB_HOST=localhost

# منفذ قاعدة البيانات الافتراضي لـ PostgreSQL هو 5432
DB_PORT=5432

# ==============================================================================
# إعدادات مصادقة المستخدم (Authentication Settings)
# ==============================================================================

# مدة صلاحية رمز الوصول (Access Token) - مثال: 15m (15 دقيقة)
JWT_ACCESS_TOKEN_EXPIRATION=15m

# مدة صلاحية رمز التحديث (Refresh Token) - مثال: 7d (7 أيام)
JWT_REFRESH_TOKEN_EXPIRATION=7d

# مفتاح سري لرموز الوصول (يجب أن يكون مختلفاً عن APP_SECRET)
JWT_ACCESS_SECRET=your_access_token_secret

# مفتاح سري لرموز التحديث
JWT_REFRESH_SECRET=your_refresh_token_secret

# ==============================================================================
# إعدادات البريد الإلكتروني (Email Service - SMTP)
# ==============================================================================

# مضيف خادم SMTP
MAIL_HOST=smtp.example.com

# منفذ خادم SMTP (عادةً 587 أو 465)
MAIL_PORT=587

# اسم المستخدم لخدمة البريد الإلكتروني
MAIL_USER=noreply@example.com

# كلمة المرور لخدمة البريد الإلكتروني
MAIL_PASSWORD=your_email_password

# عنوان البريد الإلكتروني المرسل منه
MAIL_FROM=No Reply <noreply@example.com>

# ==============================================================================
# إعدادات التخزين السحابي (Cloud Storage - S3 Compatible)
# ==============================================================================

# مفتاح الوصول (Access Key ID)
S3_ACCESS_KEY_ID=your_s3_access_key_id

# مفتاح الوصول السري (Secret Access Key)
S3_SECRET_ACCESS_KEY=your_s3_secret_access_key

# نقطة نهاية (Endpoint) لخدمة التخزين (مثال: AWS S3, MinIO)
S3_ENDPOINT=https://s3.your-region.amazonaws.com

# اسم الحاوية (Bucket Name)
S3_BUCKET_NAME=project-assets

# ==============================================================================
# إعدادات خدمات الطرف الثالث (Third-Party Services)
# ==============================================================================

# مفتاح واجهة برمجة التطبيقات لخدمة الخرائط (مثال: Google Maps API Key)
MAPS_API_KEY=your_maps_api_key

# مفتاح واجهة برمجة التطبيقات لخدمة الرسائل القصيرة (SMS)
SMS_API_KEY=your_sms_api_key

# ==============================================================================
# إعدادات النظام المحاسبي (Accounting System - Core Requirement)
# ==============================================================================

# نقطة نهاية واجهة برمجة التطبيقات للنظام المحاسبي
ACCOUNTING_API_URL=http://localhost:6000/api/v1/accounting

# مفتاح المصادقة للنظام المحاسبي (داخلي)
ACCOUNTING_API_KEY=internal_accounting_service_key

# ==============================================================================
# إعدادات CORS (Cross-Origin Resource Sharing)
# ==============================================================================

# قائمة النطاقات المسموح بها مفصولة بفواصل (مثال: http://localhost:3000,https://app.example.com)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001